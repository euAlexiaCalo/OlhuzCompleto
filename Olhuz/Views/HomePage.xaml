<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Olhuz.Views.HomePage"
             Title="Menu Principal"
             BackgroundColor="#E5F3FF"
             Shell.FlyoutBehavior="Disabled">

    <!-- Página com o menu de opções em cards sem o menu lateral -->
    <Grid
        RowDefinitions="2*,8*"
        Padding="80,40">
        <Grid
            Grid.Row="0"
            RowDefinitions="*,*"
            RowSpacing="8"
            VerticalOptions="Start"
            HorizontalOptions="Start"
            MaximumWidthRequest="400">
            <HorizontalStackLayout
                Grid.Row="0"
                VerticalOptions="Center"
                Spacing="30">
                <Image
                    Source="logo.png"
                    Aspect="AspectFill"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    HeightRequest="70" />
                <Label
                    Text="Olhuz"
                    FontSize="60"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    TextColor="Black" />
            </HorizontalStackLayout>
            <Label
                Grid.Row="1"
                Text="A técnologia que ilumina o invisível"
                FontSize="18"
                TextColor="Black"/>
        </Grid>

        <!-- Container com os botões que direcionam para as páginas em formato de cards -->
        <Grid
            Grid.Row="1"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            ColumnDefinitions="*, *, *, *"
            MaximumWidthRequest="2000"
            ColumnSpacing="40">

            <!-- Card do botão da página de LER IMAGENS -->
            <Border
                Grid.Column="0"
                x:Name="ReadImageCard"
                Style="{StaticResource CardButtonHome}">

                <!-- Aréa para colocar ações de toques/gestos -->
                <Border.GestureRecognizers>
                    <!-- Reconhece um clique com mouse ou dedo -->
                    <!-- Ao clicar no Border o comando será executado -->
                    <TapGestureRecognizer Command="{Binding ReadImagePageCommand}" />
                </Border.GestureRecognizers>

                <VerticalStackLayout
                    Style="{StaticResource CardStackLayoutHome}">

                    <Image
                        Source="logo.png"
                        Style="{StaticResource CardImageHome}"/>

                    <Label
                        Text="Ler Imagens"
                        Style="{StaticResource CardTitleLabelHome}" />

                    <Label
                        Text="Descrição visual"
                        Style="{StaticResource CardSubtitleLabelHome}" />

                </VerticalStackLayout>
                
            </Border>

            <!-- Card do botão da página de LEITURAS RECENTES -->
            <Border
                Grid.Column="1"
                x:Name="ReadingHistoryCard"
                Style="{StaticResource CardButtonHome}">

                <!-- Aréa para colocar ações de toques/gestos -->
                <Border.GestureRecognizers>
                    <!-- Reconhece um clique com mouse ou dedo -->
                    <!-- Ao clicar no Border o comando será executado -->
                    <TapGestureRecognizer Command="{Binding ReadingHistoryPageCommand}" />
                </Border.GestureRecognizers>

                <VerticalStackLayout
                    Style="{StaticResource CardStackLayoutHome}">

                    <Image
                        Source="logo.png"
                        Style="{StaticResource CardImageHome}"/>

                    <Label
                        Text="Leituras Recentes"
                        Style="{StaticResource CardTitleLabelHome}"/>

                    <Label
                        Text="Histórico de atividades"
                        Style="{StaticResource CardSubtitleLabelHome}"/>

                </VerticalStackLayout>
                
            </Border>

            <!-- Card do botão da página de CONFIGURAÇÕES -->
            <Border
                Grid.Column="2"
                x:Name="SettingsCard"
                Style="{StaticResource CardButtonHome}">

                <!-- Aréa para colocar ações de toques/gestos -->
                <Border.GestureRecognizers>
                    <!-- Reconhece um clique com mouse ou dedo -->
                    <!-- Ao clicar no Border o comando será executado -->
                    <TapGestureRecognizer Command="{Binding SettingsPageCommand}" />
                </Border.GestureRecognizers>

                <VerticalStackLayout
                    Style="{StaticResource CardStackLayoutHome}">

                    <Image
                        Source="logo.png"
                        Style="{StaticResource CardImageHome}"/>

                    <Label
                        Text="Configurações"
                        Style="{StaticResource CardTitleLabelHome}" />

                    <Label
                        Text="Personalize suas preferências"
                        Style="{StaticResource CardSubtitleLabelHome}" />

                </VerticalStackLayout>
                
            </Border>

            <!-- Card do botão da página de MINHA CONTA -->
            <Border
                Grid.Column="3"
                x:Name="MyAccountCard"
                Style="{StaticResource CardButtonHome}">

                <!-- Aréa para colocar ações de toques/gestos -->
                <Border.GestureRecognizers>
                    <!-- Reconhece um clique com mouse ou dedo -->
                    <!-- Ao clicar no Border o comando será executado -->
                    <TapGestureRecognizer Command="{Binding MyAccountPageCommand}" />
                </Border.GestureRecognizers>

                <VerticalStackLayout
                    Style="{StaticResource CardStackLayoutHome}">

                    <Image
                        Source="logo.png"
                        Style="{StaticResource CardImageHome}"/>

                    <Label
                        Text="Minha conta"
                        Style="{StaticResource CardTitleLabelHome}" />

                    <Label
                        Text="Gerencie seus dados"
                        Style="{StaticResource CardSubtitleLabelHome}" />

                </VerticalStackLayout>
                
            </Border>

        </Grid>
        
    </Grid>
    
</ContentPage>