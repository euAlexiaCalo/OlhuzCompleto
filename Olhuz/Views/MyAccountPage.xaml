<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Olhuz.Components"
             x:Class="Olhuz.Views.MyAccountPage"
             Title="Minha Conta">

    <Grid
		RowDefinitions="2*,8*">

        <components:HeaderView Grid.Row="0" />

        <ScrollView
			Grid.Row="1">
            <VerticalStackLayout Margin="100,30" Spacing="30">

                <!-- SEÇÃO 1 - LEITURA E TELA -->
                <Label Text="Informações Pessoais" Style="{StaticResource SettingsSectionLabel}" />

                <Border Style="{StaticResource CardBorderStyle}" >
                    <HorizontalStackLayout Spacing="40" Padding="0" VerticalOptions="Start">
                        <Image Grid.Column="0" Source="logo.png" WidthRequest="180" />

                        <VerticalStackLayout Grid.Column="1" Spacing="16">
                            <Label x:Name="NameLabel" Text="Nome: " FontSize="22" TextColor="Black"/>

                            <Label x:Name="BirthDateLabel" Text="Data de Nascimento: " FontSize="22" TextColor="Black"/>

                            <Label x:Name="EmailLabel" Text="Email: " FontSize="22" TextColor="Black"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>

                <!-- SEÇÃO 2 - AÇÕES DA CONTA -->

                <Label Text="Ações da Conta" Style="{StaticResource SettingsSectionLabel}" />

                <Border Style="{StaticResource CardBorderStyle}">
                    <HorizontalStackLayout Spacing="20" VerticalOptions="Center" Padding="0">
                        <Button Text="Alterar Senha" Clicked="" Style="{StaticResource SettingButtonStyle}"/>

                        <Button Text="Sair da Conta" Clicked="" Style="{StaticResource SettingButtonStyle}" />

                        <Button Text="Excluir Conta" Clicked="" Style="{StaticResource SettingButtonStyle}" />
                    </HorizontalStackLayout>
                </Border>

                <!-- SEÇÃO 3 - INFORMAÇÕES ADICIONAIS -->

                <Label Text="Informações Adicionais" Style="{StaticResource SettingsSectionLabel}" />

                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Grid.Column="1" Spacing="16">
                        <Label x:Name="VersaoLabel" Text="Versão " FontSize="22" TextColor="Black"/>
                        <HorizontalStackLayout>
                        <Label x:Name="TermosLabel" Text="Termos de privacide" FontSize="22" TextColor="Black"/>

                        <Label x:Name="SuporteLabel" Text="Email: " FontSize="22" TextColor="Black"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>


